import math
import gl
import glscene

// my first scenegraph!
define circle(col, vec2 p, float pw){
	return mix(vec4(#blue,1), vec4(col,1), clamp(1.-length(p) ** pw, 0., 1.))
}

Scene{
	debug_rate = true
	antialias = true
	fill: vec3(midi.cc4, midi.cc5, midi.cc6)
	Layer{
		w:device.w
		h:device.h
		pixel:mix(#blue,#black,.5+.5sin(p.y*2.+time.sec))
	}
	Layer{
		Text{
			value = 'FONT'
		}
		mouse.leftdown()=>{
			x: mouse.x - .5 * w
			y: mouse.y - .5 * h
			oldpx = pixel
			pixel:mix(#blue, #green, p.y)
		}
		mouse.leftup()=>{
			x = mouse.x - .5 * w 
			y = mouse.y - .5 * h
			pixel = oldpx
		}
		w = 400, h = 400
		rz: midi.c11*10
		tex = Texture.url('test_texture.jpg')
		pixel: tex.sample(p) * (max(0.) do sin on length(hp) - midi.cc2*20.)
		Layer{
			rz: mouse.x * deg
			x = 300, y = 300
		
			sx = 1
			pixel:mix(#red, #green, p.y)
			Layer{
				rz: midi.cc3 * 10
				w = 100
				h = 100
				x = -100
				pixel: circle(#white, hp, sin(atan(hp.x,hp.y) * 8.)*max(w,h))
			}
		}
	}
}